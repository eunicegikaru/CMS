<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background: #1e293b;
            color: white;
        }

        .sidebar a {
            color: #cbd5e1;
            text-decoration: none;
            padding: 12px 15px;
            display: block;
        }

        .sidebar a:hover {
            background: #334155;
            color: white;
        }

        .content {
            flex: 1;
            background: #f8fafc;
            padding: 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Page content -->
    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
