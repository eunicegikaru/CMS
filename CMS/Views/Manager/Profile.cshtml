<!-- Views/Manager/Profile.cshtml -->
@{
    ViewData["Title"] = "My Profile";
    Layout = "_ManagerLayout";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <img src="/images/manager-profile.jpg" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                <h4>John Smith</h4>
                <p class="text-muted">Project Manager</p>
                <p class="text-muted">Development Team</p>
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary" onclick="changePhoto()">
                        <i class="bi bi-camera"></i> Change Photo
                    </button>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h6 class="mb-0">Quick Links</h6>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-gear"></i> Account Settings
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-bell"></i> Notification Preferences
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-shield-lock"></i> Security Settings
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-calendar"></i> My Schedule
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Personal Information</h6>
            </div>
            <div class="card-body">
                <form id="profileForm">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input type="text" class="form-control" value="John" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input type="text" class="form-control" value="Smith" readonly>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="john.smith@company.com" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input type="tel" class="form-control" value="+1 234 567 890" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Department</label>
                        <input type="text" class="form-control" value="Development" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Employee ID</label>
                        <input type="text" class="form-control" value="MGR001" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Join Date</label>
                        <input type="text" class="form-control" value="January 15, 2020" readonly>
                    </div>

                    <button type="button" class="btn btn-primary" onclick="editProfile()">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </button>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h6 class="mb-0">Recent Activity</h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item mb-3">
                        <div class="d-flex">
                            <div class="timeline-icon bg-success bg-opacity-10 text-success me-3">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div>
                                <strong>Approved report</strong> - Weekly Progress Report
                                <br>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </div>
                    </div>
                    <div class="timeline-item mb-3">
                        <div class="d-flex">
                            <div class="timeline-icon bg-primary bg-opacity-10 text-primary me-3">
                                <i class="bi bi-plus-circle"></i>
                            </div>
                            <div>
                                <strong>Assigned task</strong> - API Integration to Mike Chen
                                <br>
                                <small class="text-muted">5 hours ago</small>
                            </div>
                        </div>
                    </div>
                    <div class="timeline-item mb-3">
                        <div class="d-flex">
                            <div class="timeline-icon bg-info bg-opacity-10 text-info me-3">
                                <i class="bi bi-chat"></i>
                            </div>
                            <div>
                                <strong>Commented on task</strong> - UI Implementation
                                <br>
                                <small class="text-muted">Yesterday</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editProfileForm">
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="editPhone" value="+1 234 567 890">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveProfile()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editProfile() {
            $('#editProfileModal').modal('show');
        }

        function saveProfile() {
            // Validate passwords
            if ($('#newPassword').val() !== $('#confirmPassword').val()) {
                alert('Passwords do not match!');
                return;
            }

            $('#editProfileModal').modal('hide');
            showNotification('Profile updated successfully', 'success');
        }

        function changePhoto() {
            alert('Photo upload dialog would open here');
        }

        function showNotification(message, type) {
            alert(message);
        }
    </script>
}